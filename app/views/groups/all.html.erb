<html>
<head>
	<title>Groups</title>

	<style type="text/css">
		.group{
			width:250px;
			height:250px;
			border:1px solid black;
			display:inline-block;
			margin:6px;
		}

		#all_groups{
			margin:10px;
		}
		h2{
			width:460px;
			margin-left:auto;
			margin-right:auto;
		}
		#back{
			width:60px;
			float:right;
			display:block;
			margin-right:100px;
		}
		#name{
			width:310px;
			display:block;
			margin-left:auto;
			margin-right:auto;
		}
		#sub{
			display:block;
			margin-left:auto;
			margin-right:auto;
			width:100px;
			margin-top:10px;
		}
		#group_name{
			text-transform: capitalize;
		}

	</style>
	<script type="text/javascript">
		$(document).ready(function(){
			$("#new_group_form").submit(function(){
				$.post($(this).attr('action'),$(this).serialize(),function(data){

					$("#all_groups").prepend("<div class='group'><p><a href='/groups/view/"+data.group_id+"'>"+data.name+"</a></p></div>")

				},"json")
				return false;
			})
		})

	</script>
</head>
<body>
	<div id='new_group'>
		<h2>Create New Group</h2>
		<a href="/homes/index" id='back'>Back</a>
		<form action='/groups/create' method='post' id='new_group_form'>
			<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
			<input type='text' name='group[name]' placeholder='Enter Name' id='name'>
			<input type='hidden' name='group[user_id]' value=<%=@user.id %>>
			<input type='submit' value='Submit' id='sub' class='btn btn-primary'>
		</form>

	</div>

	<div id='all_groups'>
		<% if @groups%>
			<% @groups.each do |group|%>
				<div class='group'>
					<p><a href='/groups/view/<%=group.id%>' id='group_name'><%=group.name %></a></p>
				</div>
			<% end%>
		<% end%>
	</div>

</body>
</html>