<html>
<head>
	<title></title>
	<style type="text/css">
		
		#vid_notes_tool{
			display:inline-block;
			margin-left: 100px;
			border:1px solid black;
		}
		#video{
			display:inline-block;
		}
		#nav h2{
			display:inline-block;
			width:500px;
		}
		#nav a{
			display: inline-block;
			width:100px;
			float:right;
		}
		#notes_flow{
			display:block;
			height:350px;
			border:1px solid black;
			vertical-align: top;
			margin-bottom:10px;
			margin-top:10px;
			overflow-x: scroll;
   		    overflow-y: hidden;
    		white-space:nowrap

		}
		#time_stamp1, #time_stamp2, #time_stamph{
			display:inline-block;
			width:100px;
		}
		#ts{
			display:block;
			margin-left:70px;
			margin-top:5px;
			margin-bottom:5px;
		}

		#new_notes{
			display:inline-block;
			vertical-align: top;
			border:1px solid black;
			margin-left:70px;
			margin-top:70px;
		}
		#new_notes textarea{
			width:500px;
			height:300px;
		}
		#submit_note{
			display:block;
			width:100px;
			margin-left: auto;
			margin-right:auto;
		}
		#new_notes h4{
			display:block;
			width:150px;
			margin-right:auto;
			margin-left:auto;
		}
		.note{
			display:inline-block;
			height:310px;
			width:310px;
			border:1px solid black;
			margin:5px;
			vertical-align: top;
			overflow: scroll;
		}
		.note_time{
			display:block;
		}
		.note_content{
			display:block;
			white-space: -webkit-pre-wrap; /* Newer versions of Chrome/Safari*/
			white-space: pre-wrap;
			word-break: break-all;
			width:300px;

		}
	</style>
	<script type="text/javascript">
		$(document).ready(function(){
			$("#note").submit(function(){
				$.post($(this).attr('action'),$(this).serialize(),function(data){
					if(data.success=='true')
					{
						$("#notes_flow").prepend("<div class='note'><a href='/notes/retrieve/"+data.note_id+"'>Note View</a><p class='note_time'>"+data.start_timeh+":"+data.start_time1+":"+data.start_time2+"</p><p class='note_content'>"+data.notes+"</p></div>");
					}
					else
					{
						alert("The Note Did Not Get Processed");
					}
				}, "json");
				return false;
			})
		})

	</script>
</head>
<body>
	<div id='nav'>
		<h2>Jot</h2>
		<a href="/homes/index">Back</a>
	</div>
	

<div id='top_container'>
	<div id='vid_notes_tool'>
		<div id='video'>
			<h2><%=@collection.name %></h2>
			<iframe id="ytplayer" type="text/html" width="640" height="390" src="http://www.youtube.com/embed/<%=@collection.url%>?autoplay=1"></iframe>
		</div>
		
		<div id='new_notes'>
			<h4>New Note</h4>
			<form action='/notes/create' method='post' id='note'>
				<div id='ts'>
					<input type='text' name='note[start_timeh]' placeholder='Enter Hour' id='time_stamph'>
					: <input type='text' name='note[start_time1]' placeholder='Enter Minutes' id='time_stamp1'> 
					: <input type='text' name='note[start_time2]' placeholder='Enter Seconds' id='time_stamp2'>
				</div>
				<input type='hidden' name='note[user_id]' value=<%=@user.id %>>
				<textarea name='note[notes]' placeholder='Enter New Note'></textarea>
				<input type='hidden' name='note[url]' value=<%=@collection.url%>>
				<input type='hidden' name='note[collection_id]' value=<%=@collection.id%>>
				<input type='submit' value='Submit' id='submit_note'>
			</form>
		</div>
	</div>


	<div id='notes_flow'>
		<% @existing_notes.each do |note|%>
			<div class='note'>
				<a href="/notes/retrieve/<%=note.id%>">Note View</a>
				<p class='note_time'><%=note.time_stamp_h %> H <%=note.time_stamp_m %> M <%=note.time_stamp_s%> S </p>
				<p class='note_content'><%=note.notes %></p>
			</div>
		<% end%>	
	</div>

</div>

</body>
</html>